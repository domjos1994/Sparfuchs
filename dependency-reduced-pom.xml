<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.domjos</groupId>
  <artifactId>Sparfuchs</artifactId>
  <name>${application.name}</name>
  <version>0.1</version>
  <url>${application.website}</url>
  <developers>
    <developer>
      <id>1</id>
      <name>${application.author}</name>
      <email>${application.email}</email>
      <url>${application.website}</url>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>${application.author}</name>
      <email>${application.email}</email>
      <url>${application.website}</url>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>General Public License V3</name>
      <url>http://www.gnu.org/licenses/gpl-3.0.en.html</url>
    </license>
  </licenses>
  <organization>
    <name>${application.author}</name>
    <url>${application.website}</url>
  </organization>
  <build>
    <outputDirectory>${application.out}</outputDirectory>
    <testOutputDirectory>${application.out}/test</testOutputDirectory>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <directory>${application.out}</directory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <executions>
          <execution>
            <configuration>
              <includes>
                <include>module-info.java</include>
              </includes>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <release>${java.version}</release>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>${project.mainClass}</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0-M4</version>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Multi-Release>true</Multi-Release>
              <Main-Class>${project.mainClass}</Main-Class>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>${project.mainClass}</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <id>Zip</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>src/assembly/zip.xml</descriptor>
              </descriptors>
              <archive>
                <manifest>
                  <mainClass>de.domjos.photo_manager.PhotoManager</mainClass>
                </manifest>
              </archive>
              <workDirectory>${application.out}</workDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>1</id>
      <name>GluonHQ</name>
      <url>http://nexus.gluonhq.com/nexus/content/repositories/releases/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.5.2</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
        <exclusion>
          <artifactId>opentest4j</artifactId>
          <groupId>org.opentest4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-platform-commons</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <java.version>11</java.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <application.out>build</application.out>
    <cfx.version>11.0.0</cfx.version>
    <application.author>Dominic Joas</application.author>
    <jfx.version>11</jfx.version>
    <maven.compiler.target>${java.version}</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <log4j.version>2.12.1</log4j.version>
    <commons.io.version>2.6</commons.io.version>
    <project.mainClass>de.domjos.sparfuchs.Main</project.mainClass>
    <application.website>https://domjos.de</application.website>
    <application.email>developing@domjos.de</application.email>
    <sqlite.version>3.28.0</sqlite.version>
    <application.name>Sparfuchs</application.name>
    <commons.imaging.version>1.0-alpha1</commons.imaging.version>
  </properties>
</project>
